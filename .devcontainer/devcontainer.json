{
  "name": "Flutter + Android + Tailscale DevContainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "dart-code.flutter"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "postCreateCommand": "flutter doctor --android-licenses && flutter doctor",
  "remoteUser": "vscode"
}
